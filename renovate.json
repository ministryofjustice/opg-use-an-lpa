{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:earlyMondays",
    "helpers:pinGitHubActionDigests",
    "docker:pinDigests"
  ],
  "branchPrefix": "renovate-",
  "commitMessageAction": "Renovate Update",
  "labels": [
    "Dependencies",
    "Renovate"
  ],
  "ignoreDeps": [
    "github.com/ministryofjustice/opg-terraform-aws-moj-ip-allow-list",
    "311462405659.dkr.ecr.eu-west-1.amazonaws.com/pdf-service",
    "github.com/ministryofjustice/opg-terraform-aws-firewalled-network"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/vendor/**"
  ],
  "packageRules": [
    {
      "description": "Catchall patch & minor updates not covered by explicit rules",
      "groupName": "Patch & Minor Updates",
      "groupSlug": "all-minor-patch-updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchManagers": [
        "!composer"
      ],
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "description": "Terraform: bundle all updates together",
      "labels": [
        "Dependencies",
        "Renovate",
        "Terraform"
      ],
      "groupName": "Terraform",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchManagers": [
        "terraform",
        "terraform-version"
      ]
    },
    {
      "description": [
        "Github Actions: bundle all updates together"
      ],
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "description": [
        "Docker Images: group all updates together"
      ],
      "labels": [
        "Dependencies",
        "Renovate",
        "Docker"
      ],
      "groupName": "Docker Updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "matchManagers": [
        "dockerfile"
      ]
    },
    {
      "description": [
        "Docker Compose: group all local dev updates together"
      ],
      "labels": [
        "Dependencies",
        "Renovate",
        "Docker"
      ],
      "groupName": "Docker Compose Updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "matchManagers": [
        "docker-compose"
      ]
    },
    {
      "description": [
        "Golang: group all updates together"
      ],
      "labels": [
        "Dependencies",
        "Renovate",
        "Golang"
      ],
      "groupName": "Golang Updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchManagers": [
        "gomod"
      ],
      "prPriority": 4
    },
    {
      "description": [
        "npm minor and patch updates"
      ],
      "groupName": "minor and patch updates (npm)",
      "groupSlug": "all-minor-patch-updates-npm",
      "labels": [
        "Dependencies",
        "Renovate",
        "nodejs"
      ],
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchFileNames": [
        "**/package.json"
      ],
      "prPriority": 4
    },
    {
      "description": [
        "front composer minor and patch updates (PHP)"
      ],
      "groupName": "front minor and patch updates (PHP)",
      "groupSlug": "front-minor-patch-updates-php",
      "labels": [
        "Dependencies",
        "Renovate",
        "PHP"
      ],
      "matchManagers": [
        "composer"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchFileNames": [
        "service-front/app/composer.json"
      ],
      "prPriority": 4,
      "matchPackageNames": [
        "!facile-it/php-openid-client"
      ]
    },
    {
      "description": [
        "api composer minor and patch updates (PHP)"
      ],
      "groupName": "api minor and patch updates (PHP)",
      "groupSlug": "api-minor-patch-updates-php",
      "labels": [
        "Dependencies",
        "Renovate",
        "PHP"
      ],
      "matchManagers": [
        "composer"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchFileNames": [
        "service-api/app/composer.json"
      ],
      "prPriority": 4,
      "matchPackageNames": [
        "!facile-it/php-openid-client"
      ]
    },
    {
      "description": [
        "smoke composer minor and patch updates (PHP)"
      ],
      "groupName": "smoke minor and patch updates (PHP)",
      "groupSlug": "smoke-minor-patch-updates-php",
      "labels": [
        "Dependencies",
        "Renovate",
        "PHP"
      ],
      "matchManagers": [
        "composer"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchFileNames": [
        "tests/smoke/composer.json"
      ]
    },
    {
      "description": [
        "AWS SDK: Reduce AWS SDK update noise"
      ],
      "labels": [
        "Dependencies",
        "Renovate",
        "AWS SDK"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchManagers": [
        "composer",
        "gomod"
      ],
      "matchPackageNames": [
        "aws/aws-sdk-php",
        "github.com/aws/aws-sdk-go-v2{/,}**"
      ],
      "extends": [
        "schedule:monthly"
      ]
    }
  ],
  "major": {
    "labels": [
      "Dependencies",
      "Renovate"
    ],
    "rangeStrategy": "pin"
  },
  "branchConcurrentLimit": 5,
  "prConcurrentLimit": 3,
  "prHourlyLimit": 1,
  "minimumReleaseAge": "7 days",
  "vulnerabilityAlerts": {
    "groupName": "Security Alerts",
    "labels": [
      "Dependencies",
      "Renovate"
    ],
    "dependencyDashboardApproval": false,
    "minimumReleaseAge": null,
    "rangeStrategy": "pin",
    "commitMessagePrefix": "[SECURITY]",
    "branchTopic": "{{{datasource}}}-{{{depName}}}-vulnerability"
  }
}
