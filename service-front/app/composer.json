{
    "name": "ministryofjustice/opg-use-my-lpa",
    "description": "Use my LPA - Viewer Service",
    "type": "project",
    "homepage": "https://github.com/ministryofjustice/opg-use-my-lpa",
    "license": "MIT",
    "config": {
        "sort-packages": true
    },
    "extra": {
        "zf": {
            "component-whitelist": [
                "zendframework/zend-expressive",
                "zendframework/zend-expressive-helpers",
                "zendframework/zend-expressive-router",
                "zendframework/zend-httphandlerrunner",
                "zendframework/zend-expressive-fastroute",
                "zendframework/zend-expressive-twigrenderer"
            ]
        }
    },
    "support": {
        "issues": "https://github.com/zendframework/zend-expressive-skeleton/issues",
        "source": "https://github.com/zendframework/zend-expressive-skeleton",
        "rss": "https://github.com/zendframework/zend-expressive-skeleton/releases.atom",
        "slack": "https://zendframework-slack.herokuapp.com",
        "forum": "https://discourse.zendframework.com/c/questions/expressive"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:ministryofjustice/notifications-php-client.git"
        },
        {
            "type": "vcs",
            "url":  "git@github.com:ministryofjustice/behat-psr-extension.git"
        }
    ],
    "require": {
        "php": "^7.1",
        "alphagov/notifications-php-client": "^2.0",
        "aws/aws-sdk-php": "^3.91",
        "dflydev/fig-cookies": "^2.0",
        "elie29/zend-phpdi-config": "^3.0",
        "paragonie/halite": "^4.5",
        "php-http/guzzle6-adapter": "^2.0",
        "wshafer/psr11-monolog": "^3.0",
        "zendframework/zend-component-installer": "^2.1.1",
        "zendframework/zend-config-aggregator": "^1.0",
        "zendframework/zend-crypt": "^3.3",
        "zendframework/zend-diactoros": "^1.7.1 || ^2.0",
        "zendframework/zend-expressive": "^3.0.1",
        "zendframework/zend-expressive-authentication-session": "^1.0",
        "zendframework/zend-expressive-csrf": "^1.0",
        "zendframework/zend-expressive-fastroute": "^3.0",
        "zendframework/zend-expressive-helpers": "^5.0",
        "zendframework/zend-expressive-session": "^1.2",
        "zendframework/zend-expressive-twigrenderer": "^2.3",
        "zendframework/zend-form": "^2.14",
        "zendframework/zend-servicemanager": "^3.4",
        "zendframework/zend-stdlib": "^3.1"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "cooperaj/behat-psr-extension": "^2.0",
        "filp/whoops": "^2.1.12",
        "jshayes/fake-requests": "^2.3",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^7.0",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.0",
        "vimeo/psalm": "^3.0",
        "zendframework/zend-expressive-tooling": "^1.0",
        "zfcampus/zf-development-mode": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Viewer\\": "src/Viewer/src/",
            "Common\\": "src/Common/src/",
            "Actor\\": "src/Actor/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ActorTest\\": "test/ActorTest/",
            "CommonTest\\": "test/CommonTest/",
            "ViewerTest\\": "test/ViewerTest/",
            "BehatTest\\": "test/BehatTest/",
            "BehatTest\\Context\\": "features/context/"
        }
    },
    "scripts": {
        "development-disable": "zf-development-mode disable",
        "development-enable": "zf-development-mode enable",
        "development-status": "zf-development-mode status",
        "check": [
            "@cs-check",
            "@unit-test",
            "@acc-test",
            "@int-test"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "psalm": "docker-compose -f ../../docker-compose.yml -f ../../../opg-sirius-api-gateway/docker-compose.yml -f ../../../opg-sirius-api-gateway/docker-compose-integration.yml run actor-app /app/vendor/bin/psalm",
        "cs-check": "docker-compose -f ../../docker-compose.yml -f ../../../opg-sirius-api-gateway/docker-compose.yml -f ../../../opg-sirius-api-gateway/docker-compose-integration.yml run actor-app /app/vendor/bin/phpcs",
        "cs-fix": "docker-compose -f ../../docker-compose.yml -f ../../../opg-sirius-api-gateway/docker-compose.yml -f ../../../opg-sirius-api-gateway/docker-compose-integration.yml run actor-app /app/vendor/bin/phpcbf",
        "unit-test": "docker-compose -f ../../docker-compose.yml -f ../../../opg-sirius-api-gateway/docker-compose.yml -f ../../../opg-sirius-api-gateway/docker-compose-integration.yml run actor-app /app/vendor/bin/phpunit --colors=always",
        "acc-test": "docker-compose -f ../../docker-compose.yml -f ../../../opg-sirius-api-gateway/docker-compose.yml -f ../../../opg-sirius-api-gateway/docker-compose-integration.yml run actor-app php -dapc.enable_cli=1 /app/vendor/bin/behat -p acceptance",
        "int-test": "docker-compose -f ../../docker-compose.yml -f ../../../opg-sirius-api-gateway/docker-compose.yml -f ../../../opg-sirius-api-gateway/docker-compose-integration.yml run actor-app /app/vendor/bin/behat -p integration"
    }
}
