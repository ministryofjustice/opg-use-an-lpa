{% extends '@actor/layout.html.twig' %}

{% block html_title %}{% trans %}Do you have an activation key to add an LPA?{% endtrans %} - {{ parent() }}{% endblock %}

{% block content %}
    <div class="govuk-width-container">
        {{ include('@partials/account-bar.html.twig') }}

        {{ include('@partials/welsh-switch.html.twig') }}

        <div role="navigation" aria-labelledby="back-link-navigation">
            <a href="{{ path('lpa.dashboard') }}" class="govuk-back-link" id="back-link-navigation">{% trans %}Back{% endtrans %}</a>
        </div>

        <main class="govuk-main-wrapper" id="main-content" role="main">
            <div class="govuk-grid-row">
                {{ govuk_form_open(form) }}
                <div class="govuk-grid-column-three-quarters">

                    {{ govuk_error_summary(form) }}
                    {{ govuk_form_element(form.get('__csrf')) }}

                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset">

                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
                                <h1 class="govuk-fieldset__heading">
                                    {% trans %}Do you have an activation key to add an LPA?{% endtrans %}
                                </h1>
                            </legend>

                            <p class="govuk-body">
                                {% trans %}
                                    You need an activation key to add an LPA to your account. Activation keys expire after 12 months.
                                {% endtrans %}
                            </p>
                            <p class="govuk-body">
                                {% trans %}
                                    The donor and all attorneys will each need their own unique activation key.
                                {% endtrans %}
                            </p>
                            <h3 class="govuk-heading-m">
                                {% trans %}
                                    Activation key format
                                {% endtrans %}
                            </h3>
                            <p class="govuk-body">
                                {% trans %}
                                    Activation keys are 13 letters and numbers long and start with a C.<br>
                                    For example: C-AB12 CD34 EF56
                                {% endtrans %}
                            </p>

                            <details class="govuk-details" data-module="govuk-details" data-gaEventType="onClick"
                                     data-gaAction="Details" data-gaCategory="ActivationKey"
                                     data-gaLabel="Where can I find my activation key?">
                                <summary class="govuk-details__summary" role="button">
                                    <span class="govuk-details__summary-text">
                                        {% trans %}Where can I find my activation key?{% endtrans %}
                                    </span>
                                </summary>

                                <div class="govuk-details__text">
                                    <p>
                                    {% trans %}
                                        Activation keys are sent to donors and attorneys by letter or email.
                                    {% endtrans %}
                                    </p>
                                </div>
                                <div class="govuk-details__text">
                                    <h3 class="govuk-heading-s">
                                        {% trans %}
                                            For LPAs registered on or after 17 July 2020
                                        {% endtrans %}
                                    </h3>
                                </div>

                                <div class="govuk-details__text">
                                    <p>{% trans %}Your activation key is on the letter we sent you that told you the LPA had been registered.{% endtrans %}</p>
                                    <p>{% trans %}If you’ve lost the letter, or the activation key has expired, you can request a new one below.{% endtrans %}</p>
                                </div>

                                <div class="govuk-details__text">
                                    <h3 class="govuk-heading-s">
                                            {% trans %}
                                                For LPAs registered before 17 July 2020
                                            {% endtrans %}
                                    </h3>
                                </div>

                                <div class="govuk-details__text">
                                    <p>{% trans %}You have to request an activation key from us. {% endtrans %}</p>
                                    <p>
                                        {% trans %}
                                            If you’ve already requested an activation key, you'll find it on the letter or email we sent you. If you’ve lost it, or it’s expired, you can request a new one below.
                                        {% endtrans %}
                                    </p>
                                </div>
                            </details>

                            {{ govuk_form_element(form.get('activation_key_triage'), {'value_options':
                                [
                                    {
                                        'label': 'Yes, I have an activation key'| trans,
                                        'value': 'Yes'
                                    },
                                    {
                                        'label': 'No, I do not have an activation key'| trans,
                                        'value': 'No'
                                    },
                                    {
                                        'label': 'I have an activation key but it has expired'| trans,
                                        'value': 'Expired'
                                    }
                                ]}
                            ) }}

                        </fieldset>
                    </div>

                    <button data-prevent-double-click="true" type="submit"
                            class="govuk-button">{% trans %}Continue{% endtrans %}</button>

                    <a href="{{ path('lpa.dashboard') }}" draggable="false"
                       class="govuk-button govuk-button--secondary">{% trans %}Cancel{% endtrans %}</a>

                    {{ govuk_form_close() }}
                </div>
            </div>
        </main>
        {{ include('@actor/partials/new-use-service.html.twig') }}
    </div>
{% endblock %}
