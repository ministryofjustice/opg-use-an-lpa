{% extends '@actor/layout.html.twig' %}

{% block html_title %}{% trans %}Cannot send an activation key{% endtrans %} - {{ parent() }}{% endblock %}

{% block content %}
    <div class="govuk-width-container">
        {{ include('@partials/account-bar.html.twig') }}
        {{ include('@partials/welsh-switch.html.twig') }}

        <main class="govuk-main-wrapper" id="main-content" role="main">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">

                    <h1 class="govuk-heading-xl">{% trans %}We cannot send an activation key for that LPA{% endtrans %}</h1>

                    <p class="govuk-body">{% trans %}You cannot add an LPA registered before September 2019.{% endtrans %}</p>
                    <p class="govuk-body">{% trans %}If the LPA was registered before this date, you'll need to show the paper LPA to people and organisations instead of using this service.{% endtrans %}</p>
                    <p class="govuk-body">{% trans %}If the paper LPA has been lost or destroyed, you can ask OPG for an office copy by calling 0300 456 0300 - office copies cost Â£35.{% endtrans %}</p>

                    <a href="{{ path('lpa.dashboard') }}" draggable="false" class="govuk-button">{% trans %}Back to your LPAs{% endtrans %}</a>
                    <a class="govuk-button govuk-button--secondary govuk-!-margin-bottom-1" href="{{ path('logout') }}">
                        {% trans %}Sign out{% endtrans %}
                    </a>
                </div>
            </div>
        </main>
        {{ include('@actor/partials/new-use-service.html.twig') }}
    </div>
{% endblock %}
