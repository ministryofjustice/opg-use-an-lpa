{% extends '@actor/layout.html.twig' %}

{% block html_title %}{% trans %}Delete your account{% endtrans %} - {{ parent() }} {% endblock %}

{% block content %}

    <div class="govuk-width-container">
        <div role="navigation" aria-labelledby="back-link-navigation">
            <a href="{{ path('settings') }}" class="govuk-back-link" id="back-link-navigation">{% trans %}Back{% endtrans %}</a><br>
        </div>

        <main class="govuk-main-wrapper" id="main-content" role="main">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <h1 class="govuk-heading-xl">{% trans %}What happens if you delete your account{% endtrans %}</h1>
                    <p class="govuk-body">{% trans %}If you delete your Use a lasting power of attorney account:{% endtrans %}</p>
                    <ul class="govuk-list govuk-list--bullet">
                        <li>{% trans %}any <abbr title="lasting powers of attorney">LPAs</abbr> you added will be permanently removed{% endtrans %}</li>
                        <li>{% trans %}youâ€˜ll not be able to see how those <abbr title="lasting powers of attorney">LPAs</abbr> are being used{% endtrans %}</li>
                    </ul>

                    <p class="govuk-body">{% trans %}You can still use paper versions of these <abbr title="lasting powers of attorney">LPAs</abbr> if:{% endtrans %}</p>
                    <ul class="govuk-list govuk-list--bullet">
                        <li>{% trans %}the <abbr title="lasting powers of attorney">LPAs</abbr> are still valid{% endtrans %}</li>
                        <li>{% trans %}you have not been removed as an attorney{% endtrans %}</li>
                    </ul><br>
                    <a href="{{ path('settings') }}" role="button" draggable="false" class="govuk-button govuk-button govuk-button--secondary govuk-!-margin-right-1">
                        {% trans %}Return to settings{% endtrans %}
                    </a>
                    <a href="{{ path('delete-account') }}" role="button" draggable="false" class="govuk-button govuk-button--warning">
                        {% trans %}Delete my account{% endtrans %}
                    </a>
                </div>
            </div>
        </main>
    </div>

{% endblock %}
