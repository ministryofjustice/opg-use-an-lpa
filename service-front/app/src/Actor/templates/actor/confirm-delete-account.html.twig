{% extends '@actor/layout.html.twig' %}

{% block html_title %}Confirm delete account - {{ parent() }} {% endblock %}

{% block content %}

    <div class="govuk-width-container">
        {{ include('@actor/partials/new-use-service.html.twig') }}

        <a href="{{ path('your-details') }}" class="govuk-back-link">Back</a><br>
        <main class="govuk-main-wrapper">

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <h1 class="govuk-heading-xl">Are you sure you want to delete your account?</h1>

                    <p class="govuk-body">If you delete your Use a lasting power of attorney account:</p>

                    <ul class="govuk-list govuk-list--bullet">
                        <li>any LPAs you added will be removed</li>
                        <li>you‘ll not be able to see how those LPAs are being used</li>
                    </ul>

                    <p class="govuk-body">If you want to use the LPA online after you've deleted your account, you’ll need to contact us.</p>

                    <p class="govuk-body">You can still use paper versions of these LPAs if:</p>

                    <ul class="govuk-list govuk-list--bullet">
                        <li>the LPAs are still valid</li>
                        <li>you have not been removed as an attorney</li>
                    </ul><br>

                    <a href="{{ path('your-details')}}" role="button" draggable="false" class="govuk-button govuk-button govuk-button--secondary govuk-!-margin-right-1">
                        No, return to my details
                    </a>

                    <a href="{{ path('delete-account') }}" role="button" draggable="false" class="govuk-button govuk-button--warning">
                        Yes, continue deleting my account
                    </a>

                </div>
            </div>
        </main>
    </div>

{% endblock %}
