{% extends '@actor/layout.html.twig' %}

{% block html_title %}
    {% if accountExists  %}
        Account not activated - {{ parent() }}
    {% else %}
        Account created - {{ parent() }}
    {% endif %}
{% endblock %}

{% block content %}
<div class="govuk-width-container">
    {{ include('@actor/partials/new-use-service.html.twig') }}

    <a href="/" class="govuk-back-link">Back</a>

    <main class="govuk-main-wrapper" id="main-content" role="main">

        <div class="govuk-grid-row">

            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-l">Activate your account</h1>

                <p class="govuk-body">We've emailed a link to {{ emailAddress }}. Click on the link to activate your account. The link will work for the next 24 hours.</p>

                <p class="govuk-body">The email should arrive in a few minutes. If it's not in your inbox, check your spam or junk folder. If you have not received the email, we can <a href="{{ path('create-account-success', {}, {'email': emailAddress, 'resend': 'true'}) }}" class="govuk-link">resend the activation email</a>.</p>

                <p class="govuk-body">If you still do not receive the email, please contact us on 0300 456 0300.</p>

                <p class="govuk-body">If you've already activated your account, you can <a href="{{ path('login') }}" class="govuk-link">sign in</a> now.</p>

            </div>

        </div>

    </main>
</div>
{% endblock %}
