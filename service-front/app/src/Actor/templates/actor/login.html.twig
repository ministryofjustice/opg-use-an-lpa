{% extends '@actor/layout.html.twig' %}

{% block title %}Login - {{ parent() }}{% endblock %}

{% block content %}
<div class="govuk-width-container">
    {{ include('@actor/partials/new-use-service.html.twig') }}

    <a href="{{ path('login') }}" class="govuk-back-link">Back</a>

    <main class="govuk-main-wrapper">

        <div class="govuk-grid-row">

            <div class="govuk-grid-column-two-thirds">

                {{ govuk_error_summary(form) }}

                {{ govuk_form_open(form) }}

                    <fieldset class="govuk-fieldset">

                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                            <h1 class="govuk-fieldset__heading">
                                Sign in to the Use an LPA service
                            </h1>
                        </legend>

                        <p class="govuk-body">Sign in or <a href="{{ path('create-account') }}" class="govuk-link">create an account</a> to use an LPA.</p>

                        {{ govuk_form_element(form.get('__csrf')) }}

                        {{ govuk_form_element(form.get('email'), { 'label': 'Email address', 'attr': { 'class': 'govuk-!-width-one-half', 'auto-complete': 'username' } }) }}

                        {{ govuk_form_element(form.get('password'), { 'label': 'Password', 'attr': { 'class': 'govuk-!-width-one-half', 'auto-complete': 'current-password' } }) }}

                        <button type="submit" class="govuk-button">Continue</button>

                    </fieldset>

                {{ govuk_form_close() }}

                <a href="{{ path('password-reset') }}" class="govuk-body govuk-link">Forgotten your password?</a>
            </div>

        </div>

    </main>
</div>
{% endblock %}
