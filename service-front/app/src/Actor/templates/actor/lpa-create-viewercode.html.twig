{% extends '@actor/layout.html.twig' %}

{% block html_title %}Give an organisation access - {{ parent() }} {% endblock %}

{% block content %}
    <div class="govuk-width-container">
        {{ include('@partials/new-service.html.twig') }}

        {{ include('@partials/account-bar.html.twig') }}

        <a href="{{ path('lpa.dashboard') }}" class="govuk-back-link">Back</a>

        <main class="govuk-main-wrapper">

            {{ govuk_error_summary(form) }}

            <div class="govuk-grid-row govuk-!-margin-top-0 govuk-!-padding-bottom-0">

                <div class="govuk-grid-column-two-thirds">
                    <span class="govuk-caption-l govuk-!-margin-top-0">{{ lpa.caseSubtype == 'pfa' ? 'Property and finance' : 'Health and welfare' }}</span>
                    <h1 class="govuk-heading-l govuk-!-margin-bottom-0">{{ actor_name(lpa.donor, false) }}</h1>
                </div>

            </div>

            {{ include('@actor/partials/lpa-sub-navigation.html.twig') }}

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">

                    {{ govuk_form_open(form) }}

                        {{ govuk_form_element(form.get('__csrf')) }}

                        {{ govuk_form_element(form.get('lpa_token')) }}

                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
                            <h1 class="govuk-fieldset__heading">
                                Which organisation do you want to give access to?
                            </h1>
                        </legend>

                        {{ govuk_form_element(form.get('org_name'), { 'label': 'For example: HSBC, British Gas', 'attr': { 'class': 'govuk-!-width-one-half' } }) }}

                        <button type="submit" class="govuk-button">
                            Continue
                        </button>

                    {{ govuk_form_close() }}

                </div>
            </div>
        </main>
    </div>
{% endblock %}
