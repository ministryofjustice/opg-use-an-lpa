{% extends '@actor/layout.html.twig' %}

{% block html_title %}Give an organisation access - {{ parent() }} {% endblock %}

{% block content %}
    <div class="govuk-width-container">
        {{ include('@actor/partials/new-use-service.html.twig') }}

        {{ include('@partials/account-bar.html.twig') }}

        <a href="{{ path('lpa.dashboard') }}" class="govuk-back-link">Back</a>

        <main class="govuk-main-wrapper">

            {{ govuk_error_summary(form) }}

            <div class="govuk-grid-row govuk-!-margin-top-0 govuk-!-padding-bottom-0">

                <div class="govuk-grid-column-two-thirds">
                    <span class="govuk-caption-l govuk-!-margin-top-0">{{ lpa.caseSubtype == 'pfa' ? 'Property and finance' : 'Health and welfare' }}</span>
                    <h1 class="govuk-heading-l govuk-!-margin-bottom-0">{{ actor_name(lpa.donor, false) }}</h1>
                </div>

            </div>

            {{ include('@actor/partials/lpa-sub-navigation.html.twig') }}

            <div class="govuk-grid-row">
                {{ govuk_form_open(form) }}
                <div class="govuk-grid-column-two-thirds">

                        {{ govuk_form_element(form.get('__csrf')) }}

                        {{ govuk_form_element(form.get('lpa_token')) }}

                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
                            <h1 class="govuk-fieldset__heading">
                                Which organisation do you want to give access to?
                            </h1>
                        </legend>
                </div>
                <div class="govuk-grid-column-full">
                    {% if lpa.caseSubtype|lower == 'hw' %}
                    <p class="govuk-body">The organisation could be a hospital, care home, or other health care provider.</p>
                    {{ govuk_form_element(form.get('org_name'), { 'hint': 'For example: St Guy\'s Hospital, Sunview Care Home', 'attr' : {'class': 'govuk-!-width-one-half'} }) }}
                    {% elseif lpa.caseSubtype|lower == 'pfa' %}
                    <p class="govuk-body">The organisation could be a bank, energy provider, or another business.</p>
                    {{ govuk_form_element(form.get('org_name'), { 'hint': 'For example: HSBC, British Gas', 'attr' : {'class': 'govuk-!-width-one-half'} }) }}
                    {% endif %}

                <button data-prevent-double-click="true" type="submit" class="govuk-button">
                    Continue
                </button>
                </div>
                {{ govuk_form_close() }}
            </div>
        </main>
    </div>
{% endblock %}
