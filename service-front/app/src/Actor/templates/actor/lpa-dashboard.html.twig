{% extends '@actor/layout.html.twig' %}

{% block html_title %}{% trans %}Your lasting powers of attorney{% endtrans %} - {{ parent() }} {% endblock %}

{% block content %}
    <div class="govuk-width-container">
        <main class="govuk-main-wrapper" id="main-content" role="main">
            {{ include('@actor/partials/flash-message.html.twig', {flash_obj: flash, flash_key:'Actor\\Handler\\CheckLpaHandler::ADD_LPA_FLASH_MSG'}) }}
            {{ include('@actor/partials/flash-message.html.twig', {flash_obj: flash, flash_key:'Actor\\Handler\\RemoveLpaHandler::REMOVE_LPA_FLASH_MSG'}) }}

            {{ include('@actor/partials/service-message.html.twig') }}

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    <h1 class="govuk-heading-xl">{% trans %}Your lasting powers of attorney{% endtrans %}</h1>
                </div>
            </div>

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <p class="govuk-body-l">{% trans %}Any lasting power of attorney (LPA) you add to your account will appear on this page.{% endtrans %}</p>

                    <p class="govuk-body-m">
                        {% trans with {
                            '%link1%': is_english(path()) ? 'https://www.gov.uk/lasting-power-attorney-duties' : 'https://www.gov.uk/atwrneiaeth-arhosol',
                            '%link2%': is_english(path()) ? 'https://www.gov.uk/make-decisions-for-someone/making-decisions' : 'https://www.gov.uk/gwneud-penderfyniadau-dros-rywun/gwneud-penderfyniadau',
                        } %}
                            Find out about <a href="%link1%" class="govuk-link">managing LPAs</a> and how attorneys should support donors <a href="%link2%" class="govuk-link">to make decisions</a>.
                        {% endtrans %}
                    </p>
                    <details class="govuk-details" data-module="govuk-details" data-gaEventType="onClick" data-gaAction="Details" data-gaCategory="Service Information" data-gaLabel="What can I do with this service?">
                        <summary class="govuk-details__summary" role="button" >
                            <span class="govuk-details__summary-text">
                              {% trans %}What can I do with this service?{% endtrans %}
                            </span>
                        </summary>
                        <div class="govuk-details__text">
                            <p>{% trans %}Use this service to:{% endtrans %}</p>
                            <ul class="govuk-list govuk-list--bullet">
                                <li>{% trans %}give organisations access to an online summary of an <abbr title="lasting power of attorney">LPA</abbr> by making a secure access code{% endtrans %}</li>
                                <li>{% trans %}keep track of the organisations that have online access to an <abbr title="lasting power of attorney">LPA</abbr>{% endtrans %}</li>
                                <li>{% trans %}view an <abbr title="lasting power of attorney">LPA</abbr> summary, including a scanned image of any restrictions and conditions (can also be known as “preferences and instructions” depending on when the LPA was made){% endtrans %}</li>
                                <li>{% trans %}ask for an activation key if you have not been given one - or it has expired{% endtrans %}</li>
                            </ul>
                        </div>
                    </details>

                    <a href="{{ path('lpa.add') }}" draggable="false" class="govuk-button">
                        {% if total_lpas > 0 %}
                            {% trans %}Add another LPA{% endtrans %}
                        {% else %}
                            {% trans %}Add your first LPA{% endtrans %}
                        {% endif %}
                    </a>
                </div>
            </div>

            {% if total_lpas > 0 %}
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-full">
                        <p class="govuk-body govuk-!-margin-bottom-0">
                            {% trans count total_lpas %}You have %count% LPA in your account | You have %count% LPAs in your account{% endtrans %}
                        </p> <br>

                        {% if has_duplicate_lpas %}
                            <div role="region" class="moj-alert moj-alert--information moj-alert--with-heading"
                                 aria-label="information: Your account contains duplicate LPAs" data-module="moj-alert">
                                <div>
                                    <svg class="moj-alert__icon" role="presentation" focusable="false"
                                         xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30" height="30" width="30">
                                        <path fill-rule="evenodd" clip-rule="evenodd"
                                              d="M10.2165 3.45151C11.733 2.82332 13.3585 2.5 15 2.5C16.6415 2.5 18.267 2.82332 19.7835 3.45151C21.3001 4.07969 22.6781 5.00043 23.8388 6.16117C24.9996 7.3219 25.9203 8.69989 26.5485 10.2165C27.1767 11.733 27.5 13.3585 27.5 15C27.5 18.3152 26.183 21.4946 23.8388 23.8388C21.4946 26.183 18.3152 27.5 15 27.5C13.3585 27.5 11.733 27.1767 10.2165 26.5485C8.69989 25.9203 7.3219 24.9996 6.16117 23.8388C3.81696 21.4946 2.5 18.3152 2.5 15C2.5 11.6848 3.81696 8.50537 6.16117 6.16117C7.3219 5.00043 8.69989 4.07969 10.2165 3.45151ZM16.3574 22.4121H13.6621V12.95H16.3574V22.4121ZM13.3789 9.20898C13.3789 8.98763 13.4212 8.7793 13.5059 8.58398C13.5905 8.38216 13.7044 8.20964 13.8477 8.06641C13.9974 7.91667 14.1699 7.79948 14.3652 7.71484C14.5605 7.63021 14.7721 7.58789 15 7.58789C15.2214 7.58789 15.4297 7.63021 15.625 7.71484C15.8268 7.79948 15.9993 7.91667 16.1426 8.06641C16.2923 8.20964 16.4095 8.38216 16.4941 8.58398C16.5788 8.7793 16.6211 8.98763 16.6211 9.20898C16.6211 9.43685 16.5788 9.64844 16.4941 9.84375C16.4095 10.0391 16.2923 10.2116 16.1426 10.3613C15.9993 10.5046 15.8268 10.6185 15.625 10.7031C15.4297 10.7878 15.2214 10.8301 15 10.8301C14.7721 10.8301 14.5605 10.7878 14.3652 10.7031C14.1699 10.6185 13.9974 10.5046 13.8477 10.3613C13.7044 10.2116 13.5905 10.0391 13.5059 9.84375C13.4212 9.64844 13.3789 9.43685 13.3789 9.20898Z"
                                              fill="currentColor" />
                                    </svg>
                                </div>
                                <div class="moj-alert__content">
                                    <h2 class="moj-alert__heading">
		                                {% trans %}Your account contains duplicate LPAs{% endtrans %}
	                                </h2>

	                                <p class="govuk-body govuk-!-margin-top-2 govuk-!-margin-left-12">{% trans %}You might find it easier to manage your account by removing duplicate LPAs.{% endtrans %}</p>
                                    <p class="govuk-body">{% trans %}It doesn’t matter which LPA you remove but it would be more accurate to keep those that show as added by you, especially when creating access codes for organisations.{% endtrans %}</p>
                                    <p class="govuk-body">{% trans %}Removing duplicate LPAs is optional.{% endtrans %}</p>
                                </div>
                            </div>
                        {% endif %}

                        {% for donorName, token in lpas %}
                            <h2 class="govuk-heading-l govuk-!-margin-top-5 govuk-!-margin-bottom-3">{{ donor_name_with_dob_removed(donorName) }}</h2>
                            {% for lpaData in token %}
                                {% set lpa = lpaData['lpa'] %}
                                {% set actorToken = lpaData['user-lpa-actor-token'] %}
                                {% set actorActive = lpaData['actorActive'] %}
                                {% set activeCodeCount = lpaData['activeCodeCount'] %}
                                {% set shareCodes = lpaData['shareCodes'] %}
                                {% set caseSubtype = lpa.caseSubtype == 'pfa' ? 'Property and finance'|trans : 'Health and welfare'|trans %}
                                {% if feature_enabled("support_datastore_lpas") %}
                                    {% set caseSubtype = lpa.caseSubtype.value == 'pfa' ? 'Property and finance'|trans : 'Health and welfare'|trans %}
                                {% endif %}
                                {% set applicationHasRestrictions = lpa.applicationHasRestrictions %}
                                {% set applicationHasGuidance = lpa.applicationHasGuidance %}
                                {% set lpaDonorSignatureDate = lpa.lpaDonorSignatureDate %}
                                {% set lpaReference = lpa.uId %}
                                {% set lpaActor = lpaData['actor']['details'] %}
                                {% set lpaActorType = lpaData['actor']['type'] %}

                                <article class="moj-ticket-panel" aria-label="Added lpa list">
                                    {% if actorActive %}
                                        {% if lpa.status|lower == 'registered' %}
                                            <section class="moj-ticket-panel__content moj-ticket-panel__content--blue" aria-label="Registered lpa section">
                                                {{ include('@actor/partials/lpa-details.html.twig') }}
                                            </section>
                                        {% elseif lpa.status|lower == 'cancelled' %}
                                            <section class="moj-ticket-panel__content moj-ticket-panel__content--red" aria-label="Cancelled lpa section">
                                                {{ include('@actor/partials/lpa-details.html.twig') }}
                                            </section>
                                        {% endif %}
                                    {% else %}
                                        <section class="moj-ticket-panel__content moj-ticket-panel__content--grey" aria-label="Inactive actor on lpa section">
                                            {{ include('@actor/partials/lpa-details.html.twig') }}
                                        </section>
                                    {% endif %}
                                </article>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </main>
    </div>
{% endblock %}
