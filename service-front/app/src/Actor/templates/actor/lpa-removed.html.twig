{% extends '@actor/layout.html.twig' %}

{% block html_title %}{% trans %}LPA removed{% endtrans %} - {{ parent() }} {% endblock %}

{% block content %}

    <div class="govuk-width-container">
        {{ include('@partials/account-bar.html.twig') }}
        {{ include('@partials/welsh-switch.html.twig') }}

        <div role="navigation" aria-labelledby="back-link-navigation">
            <a href="{{ path('lpa.dashboard') }}" class="govuk-back-link" id="back-link-navigation">{% trans %}Back{% endtrans %}</a>
        </div>

        <main class="govuk-main-wrapper" id="main-content" role="main">

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">

                    <h1 class="govuk-heading-xl">{% trans %}We've removed an LPA from your account{% endtrans %}</h1>

                    <p class="govuk-body">{% trans %}We've removed an <abbr title="lasting power of attorney">LPA</abbr> from your account because either:{% endtrans %}</p>

                    <ul class="govuk-list govuk-list--bullet">
                        <li>{% trans %}you can no longer act as an attorney on the <abbr title="lasting power of attorney">LPA</abbr>{% endtrans %}</li>
                        <li>{% trans %}you've told us you no longer want to be an attorney{% endtrans %}</li>
                        <li>{% trans %}the donor has removed you as an attorney{% endtrans %}</li>
                    </ul>

                </div>
            </div>
        </main>
        {{ include('@actor/partials/new-use-service.html.twig') }}
    </div>
{% endblock %}
