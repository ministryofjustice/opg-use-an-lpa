{% extends '@actor/layout.html.twig' %}

{% block html_title %}Add a lasting power of attorney - {{ parent() }} {% endblock %}

{% block content %}
    <div class="govuk-width-container">
        {{ include('@actor/partials/new-use-service.html.twig') }}

        {{ include('@partials/account-bar.html.twig') }}

        <a href="{{ path('lpa.dashboard') }}" class="govuk-back-link">Back to your LPAs</a>

        <main class="govuk-main-wrapper" id="main-content" role="main">

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                <span class="govuk-caption-l">{{ lpa.caseSubtype == 'pfa' ? 'Property and finance' : 'Health and welfare' }}</span>
                    <h1 class="govuk-heading-l govuk-!-margin-bottom-3">{{ actor_name(lpa.donor, false) }}</h1>
                </div>
            </div>

            {{ include('@actor/partials/lpa-sub-navigation.html.twig') }}

                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-full">

                    <div class="moj-banner moj-banner--success govuk-panel--fixButton">
                      <div class="moj-banner__message govuk-panel govuk-!-padding-1">

                        <div class="govuk-panel__body govuk-!-margin-bottom-3">
                          Give this access code to {{ organisation }}
                        </div>
                        <h1 class="govuk-panel__title govuk-!-margin-bottom-2">
                          {{ add_hyphen_to_viewer_code(code) }}
                        </h1>
                        <p class="govuk-body govuk-!-margin-bottom-0">This code expires in 30 days, on {{ expires | date ('j F Y') }}.</p>
                        <input readonly type="text" value="{{ add_hyphen_to_viewer_code(code) }}" id="accesscodecopy" class="offscreen" aria-hidden="true">
                        <button id="copybutton" class="govuk-button govuk-button__copy">Copy code</button>

                      </div>
                    </div>

                    </div>
                </div>

                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-two-thirds">
                        <p class="govuk-body-l">Ask {{ organisation }} how they want you to give them the code.</p>

                        <div class="govuk-inset-text">
                            <p class="govuk-body-s">
                                {# To do: link would need to be configured later#}
                                They should then go to https://view-lasting-power-of-attorney.service.gov.uk to use it.
                            </p>
                        </div>

                        <p class="govuk-body">To find out if an organisation is taking part in our trial, email <a href="mailto:lpa.research@digital.justice.gov.uk">lpa.research@digital.justice.gov.uk</a>. If you need to show the <abbr title="lasting power of attorney">LPA</abbr> to more than one organisation, list the organisations in one email.</p>

                        <a href="{{ path('lpa.create-code', {}, {'lpa': actorToken }) }}" role="button" draggable="false" class="govuk-button govuk-button">
                            Give another organisation access
                        </a>
                    </div>
                </div>
        </main>
    </div>
{% endblock %}
