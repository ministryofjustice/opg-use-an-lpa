{% extends '@actor/layout.html.twig' %}
{% import "@actor/one-login-error.html.twig" as olerr %}

{% block stylesheets %}
    {{ parent() }}
    <meta name="robots" content="noindex, nofollow">
{% endblock %}

{% block html_title %}
    {% trans %}One Login{% endtrans %} - {{ parent() }}
{% endblock %}

{% block content %}
    <div class="govuk-width-container">
        <main class="govuk-main-wrapper" id="main-content" role="main" aria-label="Main content">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">

                    {% if one_login_error is defined %}
                        {{ olerr.one_login_error(one_login_error) }}
                    {% else %}
                        {{ govuk_error_summary(form) }}
                    {% endif %}

                    {{ govuk_form_open(form) }}
                    {{ govuk_form_element(form.get('__csrf')) }}

                    <div role="region" class="moj-alert moj-alert--information moj-alert--with-heading"
                         aria-label="information: To make an LPA online" data-module="moj-alert">
                        <div>
                            <svg class="moj-alert__icon" role="presentation" focusable="false"
                                 xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30" height="30" width="30">
                                <path fill-rule="evenodd" clip-rule="evenodd"
                                      d="M10.2165 3.45151C11.733 2.82332 13.3585 2.5 15 2.5C16.6415 2.5 18.267 2.82332 19.7835 3.45151C21.3001 4.07969 22.6781 5.00043 23.8388 6.16117C24.9996 7.3219 25.9203 8.69989 26.5485 10.2165C27.1767 11.733 27.5 13.3585 27.5 15C27.5 18.3152 26.183 21.4946 23.8388 23.8388C21.4946 26.183 18.3152 27.5 15 27.5C13.3585 27.5 11.733 27.1767 10.2165 26.5485C8.69989 25.9203 7.3219 24.9996 6.16117 23.8388C3.81696 21.4946 2.5 18.3152 2.5 15C2.5 11.6848 3.81696 8.50537 6.16117 6.16117C7.3219 5.00043 8.69989 4.07969 10.2165 3.45151ZM16.3574 22.4121H13.6621V12.95H16.3574V22.4121ZM13.3789 9.20898C13.3789 8.98763 13.4212 8.7793 13.5059 8.58398C13.5905 8.38216 13.7044 8.20964 13.8477 8.06641C13.9974 7.91667 14.1699 7.79948 14.3652 7.71484C14.5605 7.63021 14.7721 7.58789 15 7.58789C15.2214 7.58789 15.4297 7.63021 15.625 7.71484C15.8268 7.79948 15.9993 7.91667 16.1426 8.06641C16.2923 8.20964 16.4095 8.38216 16.4941 8.58398C16.5788 8.7793 16.6211 8.98763 16.6211 9.20898C16.6211 9.43685 16.5788 9.64844 16.4941 9.84375C16.4095 10.0391 16.2923 10.2116 16.1426 10.3613C15.9993 10.5046 15.8268 10.6185 15.625 10.7031C15.4297 10.7878 15.2214 10.8301 15 10.8301C14.7721 10.8301 14.5605 10.7878 14.3652 10.7031C14.1699 10.6185 13.9974 10.5046 13.8477 10.3613C13.7044 10.2116 13.5905 10.0391 13.5059 9.84375C13.4212 9.64844 13.3789 9.43685 13.3789 9.20898Z"
                                      fill="currentColor" />
                            </svg>
                        </div>
                        <div class="moj-alert__content">
                            {% trans with {
                                '%link%': 'https://www.gov.uk/power-of-attorney/make-lasting-power'
                            } %}
                                To make an LPA online, or to continue to make an LPA you’ve started, go to the
                                <a href="%link%" class="govuk-link">Make a lasting power of attorney service.</a>
                            {% endtrans %}
                        </div>
                    </div>

                    <h1 class="govuk-heading-xl">{% trans %}Sign in to use your lasting power of attorney{% endtrans %}</h1>

                    <p class="govuk-body">
                        {% trans %}
                            You’ll need to sign in to the Use a lasting power of attorney service using GOV.UK One Login.
                        {% endtrans %}
                    </p>
                    <p class="govuk-body">
                        {% trans %}
                            If you’ve not used GOV.UK One Login before, you can set up your access on the next page.
                        {% endtrans %}
                    </p>
                    <p class="govuk-body">
                        {% trans %}
                            GOV.UK One Login is the new way to sign in to government services in one place, using the same email address and password.
                        {% endtrans %}
                    </p>
                    <h2 class="govuk-heading-l">{% trans %}What if I’ve used this service before?{% endtrans %}</h2>
                    <p class="govuk-body">
                        {% trans %}
                            If you have a Use a lasting power of attorney account from before 13 August 2024, and you use the same email address for GOV.UK One Login, any LPAs you’ve previously added will automatically appear.
                        {% endtrans %}
                    </p>

                    <div class="govuk-inset-text">
                        {% trans with {
                            '%link%': path('terms-of-use')
                        } %}
                            By continuing, you are agreeing to the
                            <a href="%link%" class="govuk-link">terms of the Use a lasting power of attorney service.</a>
                        {% endtrans %}

                    </div>

                    <button
                            data-prevent-double-click="true"
                            name="sign-in-one-login"
                            type="submit"
                            class="govuk-button govuk-button--start govuk-!-margin-bottom-1" aria-label="Continue with GOV.UK One Login">
                        {% trans %}Continue{% endtrans %}
                        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19"
                             viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                        </svg>
                    </button>
                    <p class="govuk-body-s">{% trans %}with GOV.UK One Login{% endtrans %}</p>
                    <br>
                    <p class="govuk-body-s">
                        {% trans %}
                            If you have any problems signing in to this service, you can
                            <a href="https://home.account.gov.uk/contact-gov-uk-one-login?lng=en" class="govuk-link">contact the GOV.UK One Login team</a>
                            to get help.
                        {% endtrans %}
                    </p>

                    {{ govuk_form_close() }}
                </div>
            </div>
        </main>
    </div>
{% endblock %}
