{% extends '@actor/layout.html.twig' %}

{% block html_title %}
    {% trans %}One Login{% endtrans %} - {{ parent() }}
{% endblock %}

{% block content %}
    <div class="govuk-width-container">
        <main class="govuk-main-wrapper" id="main-content" role="main" aria-label="Main content">
            <div class="govuk-grid-row">
                {{ govuk_error_summary(form) }}
                {{ govuk_form_open(form) }}

                <div class="moj-banner govuk-grid-column-two-thirds" role="region" aria-label="information">
                    <svg class="moj-banner__icon" fill="currentColor" role="presentation" focusable="false" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 25" height="25" width="25">
                        <path d="M13.7,18.5h-2.4v-2.4h2.4V18.5z M12.5,13.7c-0.7,0-1.2-0.5-1.2-1.2V7.7c0-0.7,0.5-1.2,1.2-1.2s1.2,0.5,1.2,1.2v4.8
	C13.7,13.2,13.2,13.7,12.5,13.7z M12.5,0.5c-6.6,0-12,5.4-12,12s5.4,12,12,12s12-5.4,12-12S19.1,0.5,12.5,0.5z" />
                    </svg>
                    <div class="moj-banner__message">
                        <h2 class="govuk-body">{% trans with {'%link%': 'https://www.gov.uk/power-of-attorney/make-lasting-power'} %}
                                To make an LPA online, or to continue to make an LPA you’ve started, go to the
                                <a href="%link%" class="govuk-link">Make a lasting power of attorney service.</a>
                            {% endtrans %}</h2>
                    </div>
                </div>

                <div class="govuk-grid-column-two-thirds">
                    <h1 class="govuk-heading-xl">{% trans %}Sign in to this service{% endtrans %}</h1>

                    <p class="govuk-body">
                        {% trans %}
                            You’ll need to sign in to the Use a lasting power of attorney service using GOV.UK One Login.
                        {% endtrans %}
                    </p>
                    <p class="govuk-body">
                        {% trans %}
                            If you’ve not used GOV.UK One Login before, you can set up your access on the next page.
                        {% endtrans %}
                    </p>
                    <p class="govuk-body">
                        {% trans %}
                            GOV.UK One Login is the new way to sign in to government services in one place, using the same email address and password.
                        {% endtrans %}
                    </p>
                    <h2 class="govuk-heading-l">{% trans %}What if I’ve used this service before?{% endtrans %}</h2>
                    <p class="govuk-body">
                        {% trans %}
                            If you have a Use a lasting power of attorney account from before 1 January 2024 and you use the same email address for GOV.UK One Login, any LPAs you’ve previously added will automatically appear.
                        {% endtrans %}
                    </p>

                <div class="govuk-inset-text">
                    {% trans with {'%link%': 'https://use-lasting-power-of-attorney.service.gov.uk/terms-of-use'} %}
                        By continuing, you are agreeing to the
                        <a href="%link%" class="govuk-link">terms of the Use a lasting power of attorney service.</a>
                    {% endtrans %}
                </div>
                </div>
                <div class="govuk-grid-column-two-thirds">
                    <button
                            data-prevent-double-click="true"
                            name="sign-in-one-login"
                            type="submit"
                            class="govuk-button govuk-button--start govuk-!-margin-bottom-1" aria-label="Continue with GOV.UK One Login">
                        {% trans %}Continue{% endtrans %}
                        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                        </svg>
                    </button>
                    <p class="govuk-body-s">{% trans %}with GOV.UK One Login{% endtrans %}</p>
                    <br>
                    <p class="govuk-body-s">
                        {% trans %}
                            If you have any problems signing in to this service, you can
                            <a href=https://home.account.gov.uk/contact-gov-uk-one-login?lng=en class="govuk-link">contact the GOV.UK One Login team</a>
                            to get help.
                        {% endtrans %}
                    </p>

                </div>
                {{ govuk_form_close() }}
            </div>
        </main>
    </div>
{% endblock %}
