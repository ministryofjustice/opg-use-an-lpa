<div class="govuk-accordion__section ">
    <div class="govuk-accordion__section-header">
        <h2 class="govuk-accordion__section-heading">
        <span class="govuk-accordion__section-button" id="accordion-default-heading-4">
          {{ code.Organisation }}
        </span>
        </h2>
    </div>
    <div id="accordion-default-content-4" class="govuk-accordion__section-content" aria-labelledby="accordion-default-heading-4">
        <dl class="govuk-summary-list govuk-summary-list--no-border">

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">Access code</dt>
                <dd class="govuk-summary-list__value">{{ add_hyphen_to_viewer_code(code.ViewerCode) }}</dd>
            </div>

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">Created by</dt>
                <dd class="govuk-summary-list__value">{{ code.CreatedBy }}</dd>
            </div>

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">LPA viewed</dt>
                <dd class="govuk-summary-list__value">
                    {% if code.Viewed == true %}
                        Viewed
                    {% else %}
                        Not Viewed
                    {% endif %}
                </dd>
            </div>

            <div class="govuk-summary-list__row">
                {% if check_if_code_has_expired(code.Expires) == false %}
                    <dt class="govuk-summary-list__key">Expires</dt>
                    <dd class="govuk-summary-list__value">{{ code_date(code.Expires) }}</dd>
                {% else %}
                    <dt class="govuk-summary-list__key">Expired</dt>
                    <dd class="govuk-summary-list__value">{{ code_date(code.Expires) }}</dd>
                {% endif %}
            </div>

            {% if check_if_code_has_expired(code.Expires) %}
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">Status</dt>
                    <dd class="govuk-summary-list__value">
                        <span class="moj-badge moj-badge--red">EXPIRED</span>
                    </dd>
                </div>
            {% endif %}

        </dl>
    </div>
</div>
