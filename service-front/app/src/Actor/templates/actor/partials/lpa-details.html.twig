<span class="govuk-heading-l govuk-!-margin-top-3 govuk-!-margin-bottom-3">{{ actor_name(lpa.donor, false) }}</span>

<hr class="govuk-section-break govuk-section-break--s govuk-section-break--visible">
<dl class="govuk-summary-list govuk-!-margin-bottom-0">
    <div class="govuk-summary-list__row govuk-!-margin-bottom-0 govuk-!-margin-top-4">
        <dt class="govuk-summary-list__key govuk-!-margin-bottom-0 govuk-!-width-one-third">
            {% if actorActive %}
                <span class="govuk-heading-m govuk-!-margin-bottom-0">{{ caseSubtype }}</span>
            {% else %}
                <span class="govuk-heading-m govuk-!-margin-bottom-0 lpa-secondary-text-colour">{{ caseSubtype }}</span>
            {% endif %}
        </dt>
        <dd class="govuk-summary-list__value govuk-!-padding-top-4 govuk-!-padding-bottom-4 govuk-!-margin-bottom-0">
            {% if actorActive %}
                <p class="govuk-!-margin-top-0">
                    <a class="govuk-link" href="{{ path('lpa.create-code', {}, {'lpa': actorToken }) }}">Give an organisation access</a><br>
                    <a class="govuk-link" href="{{ path('lpa.access-codes', {}, {'lpa': actorToken }) }}">Check access codes</a><br>
                    <a class="govuk-link" href="{{ path('lpa.view', {}, {'lpa': actorToken}) }}">View LPA summary</a>
                </p>
            {% else %}
                <p class="govuk-!-margin-top-0 lpa-secondary-text-colour">
                    Give an organisation access<br>
                    Check access codes<br>
                    View LPA summary
                </p>
            {% endif %}
        </dd>
        <dd class="govuk-summary-list__actions govuk-!-width-one-third">
            {% if actorActive == false %}
                <span class="moj-badge moj-badge--red">Access revoked</span>
            {% elseif activeCodeCount >= 1 %}
                <span class="moj-badge moj-badge--green">
                    {% if activeCodeCount == 1 %}
                        {{ activeCodeCount }} active code
                    {% else %}
                        {{ activeCodeCount }} active codes
                    {% endif %}
                </span>
            {% else %}
                <span class="moj-badge moj-badge--grey">No organisations have access</span>
            {% endif %}
        </dd>
    </div>
</dl>
{%  if not actorActive %}
    <div class="lpa-inactive-notice" >
        <p class="govuk-body govuk-!-padding-2 govuk-!-margin-left-2 govuk-!-margin-bottom-0">You no longer have access to this LPA.
            <a class="govuk-!-margin-left-3 govuk-link" href="{{ path('lpa.removed') }}"> Why is this?</a>
        </p>
    </div>
{%  endif %}
