{% extends '@actor/layout.html.twig' %}

{% block html_title %}Change your password - {{ parent() }} {% endblock %}

{% block content %}
    <div class="govuk-width-container">
        {{ include('@actor/partials/new-use-service.html.twig') }}

        <a href="{{ path('login') }}" class="govuk-back-link">Back</a>

        <main class="govuk-main-wrapper">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">

                    <h1 class="govuk-heading-xl">Unable to reset password</h1>

                    <p class="govuk-body-l">The link you have clicked on is invalid or has expired.</p>
                </div>
            </div>
        </main>
    </div>
{% endblock %}
