{% extends '@actor/layout.html.twig' %}

{% block title %}Email sent - {{ parent() }}{% endblock %}

{% block content %}
<div class="govuk-width-container">
    {{ include('@actor/partials/new-use-service.html.twig') }}

    <a href="{{ path('login') }}" class="govuk-back-link">Back</a>

    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-xl">Thank you</h1>

                <p class="govuk-body-l">We've emailed a link to <strong class="govuk-!-font-weight-bold">{{ email }}</strong> so that you
                    can reset your password.</p>

                <p class="govuk-body">If you have not received the email within a few minutes, please check your spam, bulk or junk email
                    folder &mdash; your email system may have blocked it by mistake.</p>

                <p class="govuk-body">If it does not arrive at all, please check that you've given us the correct email address for your
                    existing LPA account &mdash; we'll only send a password reset link to the email address belonging to an account.</p>
            </div>
        </div>
    </main>
</div>
{% endblock %}
