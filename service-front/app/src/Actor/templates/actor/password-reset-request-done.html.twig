{% extends '@actor/layout.html.twig' %}

{% block html_title %}{% trans %}Confirm your new password{% endtrans %} - {{ parent() }}{% endblock %}

{% block content %}
<div class="govuk-width-container">
    {{ include('@actor/partials/new-use-service.html.twig') }}

    {{ include('@partials/welsh-switch.html.twig') }}

    <a href="{{ path('login') }}" class="govuk-back-link">{% trans %}Back{% endtrans %}</a>

    <main class="govuk-main-wrapper" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-xl">{% trans %}Updating your password{% endtrans %}</h1>

                <p class="govuk-body-l">{% trans with {'%email%': email } %}We've emailed a link to <strong class="govuk-!-font-weight-bold">%email%</strong> so that you can reset your password.{% endtrans %}</p>

                <p class="govuk-body">{% trans %}
                        If you have not received the email within a few minutes, please check your spam, bulk or junk email folder &mdash; your email system may have blocked it by mistake.{% endtrans %}
                </p>

                <p class="govuk-body">{% trans %}
                        If it does not arrive at all, please check that you've given us the correct email address for your existing <abbr title="lasting power of attorney">LPA</abbr> account &mdash; we'll only send a password reset link to the email address belonging to an account.{% endtrans %}
                </p>
            </div>
        </div>
    </main>
</div>
{% endblock %}
