{% extends '@actor/layout.html.twig' %}

{% block html_title %}{% trans %}Confirm your new password{% endtrans %} - {{ parent() }}{% endblock %}

{% block content %}
<div class="govuk-width-container">

    {{ include('@partials/welsh-switch.html.twig') }}

    <div role="navigation" aria-labelledby="back-link-navigation">
        <a href="{{ path('login') }}" class="govuk-back-link" id="back-link-navigation">{% trans %}Back{% endtrans %}</a>
    </div>

    <main class="govuk-main-wrapper" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl">{% trans %}Resetting your password{% endtrans %}</h1>
                <p class="govuk-body-l">{% trans with {'%email%': email } %}We've emailed a link to <strong class="govuk-!-font-weight-bold">%email%</strong> so that you can reset your password for your Use a lasting power of attorney account.{% endtrans %}</p>
                <p class="govuk-body">
                    {% trans %}
                        If you have not received an email within a few minutes, please check your spam, bulk or junk email folder &mdash; your email system may have blocked it by mistake. If there’s no account with this email address we’ll also let you know.
                    {% endtrans %}
                </p>
            </div>
        </div>
    </main>
    {{ include('@actor/partials/new-use-service.html.twig') }}
</div>
{% endblock %}
