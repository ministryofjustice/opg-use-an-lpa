{% extends '@actor/layout.html.twig' %}

{% block html_title %}{% trans %}Resetting your password{% endtrans %} - {{ parent() }}{% endblock %}

{% block content %}
<div class="govuk-width-container">
    <div role="navigation" aria-labelledby="back-link-navigation">
        <a href="{{ path('login') }}" class="govuk-back-link" id="back-link-navigation">{% trans %}Back{% endtrans %}</a>
    </div>

    <main class="govuk-main-wrapper" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                {{ govuk_error_summary(form) }}

                {{ govuk_form_open(form) }}
                    <fieldset class="govuk-fieldset">

                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
                            <h1 class="govuk-fieldset__heading">
                                {% trans %}Reset your password{% endtrans %}
                            </h1>
                        </legend>

                        <p class="govuk-body">{% trans %}Enter your email address below. If there's an account associated with the address, we'll send you a link to reset your password.{% endtrans %}</p>

                        {{ govuk_form_element(form.get('__csrf')) }}

                        {{ govuk_form_element(form.get('email'), { 'label': 'Email address'|trans, 'attr': { 'class': 'govuk-!-width-two-thirds'} }) }}

                        {{ govuk_form_element(form.get('email_confirm'), { 'label': 'Confirm your email address'|trans, 'attr': { 'class': 'govuk-!-width-two-thirds' } }) }}

                        <button type="submit" class="govuk-button">
                            {% trans %}Email me the link{% endtrans %}
                        </button>
                    </fieldset>
                {{ govuk_form_close() }}
            </div>
        </div>
    </main>
    {{ include('@actor/partials/new-use-service.html.twig') }}
</div>
{% endblock %}
