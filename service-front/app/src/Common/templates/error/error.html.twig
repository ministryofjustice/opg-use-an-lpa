{% extends '@layout/default.html.twig' %}

{% block title %}{{ status }} {{ reason }}{% endblock %}

{% block content %}
<div class="govuk-width-container">
    {{ include('@partials/new-service.html.twig') }}

    <a href="/" class="govuk-back-link">Back</a>

    <main class="govuk-main-wrapper">
        <span class="govuk-caption-xl">This is awkward.</span>
        <h1 class="govuk-heading-xl">Oops!</h1>
        <p class="govuk-body">We encountered a {{ status }} {{ reason }} error.</p>

        {% if status == 404 %}
            <p class="govuk-body">
                You are looking for something that doesn't exist or may have moved. Check out one of the links on this page
                or head back to <a href="{{ path('home') }}">Home</a>.
            </p>
        {% endif %}

    </main>
</div>
{% endblock %}
