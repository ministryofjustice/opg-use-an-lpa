{% extends '@viewer/layout.html.twig' %}

{% block html_title %}{% trans %}We need some more details{% endtrans %} - {{ parent() }}{% endblock %}

{% block content %}
    <div class="govuk-width-container">
        <main class="govuk-main-wrapper" id="main-content" role="main">
            {{ govuk_error_summary(form) }}

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    {{ govuk_form_open(form) }}
                    {{ govuk_form_element(form.get('__csrf')) }}

                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
                            {% set lpaTypeLabel = (lpaType == 'hw') ? 'health and welfare LPA' | trans : 'property and finance LPA' | trans %}

                            <h1 class="govuk-fieldset__heading">
                                {% trans with {'%donorName%': donorName, '%lpaType%': lpaTypeLabel} %}We've found %donorName%'s %lpaType%{% endtrans %}
                            </h1>
                        </legend>

                        <p class="govuk-body">{% trans %}Because the code you entered is a paper verification code, we need some further details:{% endtrans %}</p>

                        <ul class="govuk-list govuk-list--bullet">
                            <li>{% trans %}<abbr title="lasting power of attorney">LPA</abbr> reference number - this will be on any letters we've sent to the donor or attorneys{% endtrans %}</li>
                            <li>{% trans %}date of birth of the person who the paper verification code was sent to{% endtrans %}</li>
                            <li>{% trans %}number of attorneys named on the notice of registration{% endtrans %}</li>
                            <li>{% trans %}name of 1 attorney named on the notice of registration{% endtrans %}</li>
                        </ul>

                        {{ govuk_form_element(form.get('lpa_reference'), {
                               'label': 'What is the LPA reference number?'| trans,
                               'hint': 'LPA reference numbers start with an M followed by 12 numbers.<br>For example, M-1234-1234-1234.'| trans,
                               'attr': {'label_class': 'govuk-label--m'}
                        }) }}
                    </fieldset>

                    <div class="govuk-button-group">
                        <button type="submit" data-prevent-double-click="true" class="govuk-button" data-module="govuk-button">
                          {% trans %}Continue{% endtrans %}
                        </button>

                        <a href="{{ path('home') }}" role="button" draggable="false" class="govuk-button govuk-button--secondary" data-module="govuk-button">
                            {% trans %}Cancel{% endtrans %}
                        </a>
                    </div>

                    {{ govuk_form_close() }}
                </div>
            </div>
        </main>
    </div>
{% endblock %}
