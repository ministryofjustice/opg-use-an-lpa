{% extends '@viewer/layout.html.twig' %}

{% block html_title %}{% trans %}Attorney details{% endtrans %} - {{ parent() }}{% endblock %}

{% block content %}
    <div class="govuk-width-container">
        <div role="navigation" aria-labelledby="back-link-navigation">
            <a href="{{ path(back) }}" class="govuk-back-link" id="back-link-navigation">{% trans %}Back{% endtrans %}</a>
        </div>

        <main class="govuk-main-wrapper" id="main-content" role="main">
            {{ govuk_error_summary(form) }}

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    {{ govuk_form_open(form) }}
                    {{ govuk_form_element(form.get('__csrf')) }}

                    <h1 class="govuk-heading-xl" id="attorney_details_heading">{% trans %}Attorney details{% endtrans %}</h1>

                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                            <h2 class="govuk-fieldset__heading" id="number_of_attorneys_heading">
                                {% trans %}Number of Attorneys{% endtrans %}
                            </h2>
                        </legend>

                        {{ govuk_form_element(form.get('no_of_attorneys'), {
                               'label': 'Enter the number of attorneys listed on the notice of registration.' | trans,
                               'hint': 'For example, 2.'| trans,
                               'attr' : {
                                   'class': 'govuk-input--width-5',
                                   'label_class': 'govuk-label'
                               },
                               'aria_labelledby': 'number_of_attorneys_heading'
                        }) }}
                    </fieldset>

                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                            <h2 class="govuk-fieldset__heading" id="attorney_name_heading">
                                {% trans %}Enter an attorney's name{% endtrans %}
                            </h2>
                        </legend>

                        {{ govuk_form_element(form.get('attorneys_name'), {
                               'label': 'Enter the name of an attorney listed on the notice of registration. It does not matter which attorney you enter.' | trans,
                               'hint': 'Spell the name as it appears on the notice of registration.'| trans,
                               'attr' : {
                                   'class': 'govuk-input--width-20',
                                   'label_class': 'govuk-label'
                               },
                               'aria_labelledby': 'attorney_name_heading'
                        }) }}
                    </fieldset>

                    <div class="govuk-button-group">
                        <button type="submit" data-prevent-double-click="true" class="govuk-button" data-module="govuk-button">
                          {% trans %}Continue{% endtrans %}
                        </button>

                        <a href="{{ path('home') }}" role="button" draggable="false" class="govuk-button govuk-button--secondary" data-module="govuk-button">
                            {% trans %}Cancel{% endtrans %}
                        </a>
                    </div>

                    {{ govuk_form_close() }}
                </div>
            </div>
        </main>
    </div>
{% endblock %}
