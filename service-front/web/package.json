{
  "name": "web",
  "version": "1.0.0",
  "type": "module",
  "description": "Web components for the use lpa service",
  "main": "index.js",
  "repository": "git@github.com:ministryofjustice/opg-use-an-lpa.git",
  "scripts": {
    "test": "CI=true jest --coverage",
    "test:watch": "jest --watch",
    "build:pdf": "webpack --progress --config webpack.pdf.development.js",
    "build:pdf_production": "npm run build-scss && webpack --progress --config webpack.pdf.production.js",
    "build": "npm run build-scss && webpack --progress --config webpack.production.js",
    "esbuild": "npm run build-scss && node build.js && babel dist/index.js -o dist/indexES5.js",
    "watch": "webpack --progress --watch --config webpack.development.js",
    "accessibility-check": "node ./pa11y.js",
    "build-scss": "npm rebuild node-sass && node-sass --omit-source-map-url src/gds.scss dist/stylesheets/gds.css && node-sass --omit-source-map-url src/stylesheets/lpa.scss dist/stylesheets/lpa.css"
  },
  "author": "John Nolan <john.nolan@digital.justice.gov.uk>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/plugin-transform-member-expression-literals": "^7.18.6",
    "@babel/plugin-transform-property-literals": "^7.18.6",
    "@babel/plugin-transform-reserved-words": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.3",
    "@testing-library/dom": "^8.18.1",
    "@testing-library/jest-dom": "^5.16.4",
    "coveralls": "^3.1.1",
    "es6-promise": "^4.2.8",
    "esbuild": "^0.15.10",
    "esbuild-sass-plugin": "^2.3.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^27.5.1",
    "jest-junit": "^13.2.0",
    "node-sass": "^7.0.3",
    "prettier": "^2.7.1",
    "sass": "^1.55.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.18.6",
    "@ministryofjustice/frontend": "0.2.6",
    "govuk-frontend": "^3.14.0",
    "perfume.js": "^6.4.0"
  },
  "jest-junit": {
    "outputDirectory": "./test-results/junit",
    "outputName": "results.xml"
  }
}
