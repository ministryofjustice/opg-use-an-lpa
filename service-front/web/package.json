{
  "name": "web",
  "version": "1.0.0",
  "type": "module",
  "description": "Web components for the use lpa service",
  "main": "index.js",
  "repository": "git@github.com:ministryofjustice/opg-use-an-lpa.git",
  "scripts": {
    "test": "CI=true jest --coverage",
    "test:watch": "jest --watch",
    "build": " npm run build-scss && BABEL_ENV=build babel src --out-dir dist && node build.js",
    "watch": "webpack --progress --watch --config webpack.development.js",
    "accessibility-check": "node ./pa11y.js",
    "build-scss": "npm rebuild sass --verbose && sass --verbose src/main.scss:dist/stylesheets/main.css src/gds.scss:dist/stylesheets/gds.css src/pdf.scss:dist/pdf.css"
  },
  "author": "John Nolan <john.nolan@digital.justice.gov.uk>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/plugin-transform-member-expression-literals": "^7.18.6",
    "@babel/plugin-transform-property-literals": "^7.18.6",
    "@babel/plugin-transform-reserved-words": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/runtime-corejs3": "^7.20.6",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.4",
    "babel-jest": "^29.2.2",
    "core-js": "^3.26.0",
    "coveralls": "^3.1.1",
    "es6-promise": "^4.2.8",
    "esbuild": "^0.15.10",
    "esbuild-sass-plugin": "^2.3.3",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.0",
    "jest-environment-jsdom": "^29.2.2",
    "jest-junit": "^13.2.0",
    "prettier": "^2.7.1",
    "sass": "^1.55.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.20.1",
    "@ministryofjustice/frontend": "0.2.6",
    "govuk-frontend": "^3.14.0",
    "perfume.js": "^6.4.0"
  },
  "jest-junit": {
    "outputDirectory": "./test-results/junit",
    "outputName": "results.xml"
  }
}
