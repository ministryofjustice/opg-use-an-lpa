{
  "name": "web",
  "version": "1.0.0",
  "description": "Web components for the use lpa service",
  "main": "index.js",
  "repository": "git@github.com:ministryofjustice/opg-use-an-lpa.git",
  "scripts": {
    "test": "CI=true jest --coverage",
    "test:watch": "jest --watch",
    "build:pdf": "webpack -p --progress --config webpack.pdf.development.js",
    "build:pdf_production": "npm run build-scss && webpack -p --progress --config webpack.pdf.production.js",
    "build": "npm run build-scss && webpack -p --progress --config webpack.production.js",
    "watch": "webpack -p --progress --watch --config webpack.development.js",
    "accessibility-check": "node ./pa11y.js",
    "build-scss": "npm rebuild node-sass && node-sass --omit-source-map-url src/gds.scss dist/stylesheets/gds.css"
  },
  "author": "John Nolan <john.nolan@digital.justice.gov.uk>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-member-expression-literals": "^7.8.3",
    "@babel/plugin-transform-property-literals": "^7.8.3",
    "@babel/plugin-transform-reserved-words": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@testing-library/dom": "^7.20.0",
    "@testing-library/jest-dom": "^5.8.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "base64-inline-loader": "^1.1.1",
    "copy-webpack-plugin": "^6.0.1",
    "coveralls": "^3.0.9",
    "css-loader": "^3.5.3",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "jest-junit": "^10.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "^2.0.5",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "terser-webpack-plugin": "^3.0.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@ministryofjustice/frontend": "0.0.18-alpha",
    "@ministryofjustice/opg-performance-analytics": "^1.1.1",
    "govuk-frontend": "^3.6.0"
  },
  "jest-junit": {
    "outputDirectory": "./test-results/junit",
    "outputName": "results.xml"
  },
  "jest": {
    "resetMocks": true,
    "testMatch": [
      "**/?(*.)+(test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
