{
  "name": "web",
  "version": "1.0.0",
  "description": "Web components for the use lpa service",
  "main": "index.js",
  "repository": "git@github.com:ministryofjustice/opg-use-an-lpa.git",
  "scripts": {
    "test": "CI=true jest --coverage",
    "test:watch": "jest --watch",
    "build:pdf": "webpack -p --progress --config webpack.pdf.development.js",
    "build:pdf_production": "npm run build-scss && webpack --progress --config webpack.pdf.production.js",
    "build": "npm run build-scss && webpack --progress --config webpack.production.js",
    "watch": "webpack -p --progress --watch --config webpack.development.js",
    "accessibility-check": "node ./pa11y.js",
    "build-scss": "npm rebuild node-sass && node-sass --omit-source-map-url src/gds.scss dist/stylesheets/gds.css"
  },
  "author": "John Nolan <john.nolan@digital.justice.gov.uk>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-member-expression-literals": "^7.12.1",
    "@babel/plugin-transform-property-literals": "^7.12.1",
    "@babel/plugin-transform-reserved-words": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@testing-library/dom": "^7.29.1",
    "@testing-library/jest-dom": "^5.11.8",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "base64-inline-loader": "^1.1.1",
    "copy-webpack-plugin": "^7.0.0",
    "coveralls": "^3.1.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "mini-css-extract-plugin": "^1.3.3",
    "node-sass": "^5.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "prettier": "^2.2.1",
    "sass": "^1.32.0",
    "sass-loader": "^10.1.0",
    "terser-webpack-plugin": "^5.0.3",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "@ministryofjustice/frontend": "0.0.23",
    "@ministryofjustice/opg-performance-analytics": "^1.1.1",
    "govuk-frontend": "^3.10.2"
  },
  "jest-junit": {
    "outputDirectory": "./test-results/junit",
    "outputName": "results.xml"
  },
  "jest": {
    "resetMocks": true,
    "testMatch": [
      "**/?(*.)+(test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
