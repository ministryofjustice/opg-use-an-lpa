{
  "name": "web",
  "version": "1.0.0",
  "type": "module",
  "description": "Web components for the use lpa service",
  "main": "index.js",
  "repository": "git@github.com:ministryofjustice/opg-use-an-lpa.git",
  "scripts": {
    "test": "CI=true jest --coverage",
    "test:watch": "jest --watch",
    "build": " npm run build-scss && BABEL_ENV=build babel src --out-dir dist && node build.js",
    "watch": "webpack --progress --watch --config webpack.development.js",
    "accessibility-check": "node ./pa11y.js",
    "build-scss": "npm rebuild sass --verbose && sass --load-path=./ --verbose src/main.scss:dist/stylesheets/main.css src/gds.scss:dist/stylesheets/gds.css src/pdf.scss:dist/pdf.css --style compressed"
  },
  "author": "John Nolan <john.nolan@digital.justice.gov.uk>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/plugin-transform-member-expression-literals": "^7.18.6",
    "@babel/plugin-transform-property-literals": "^7.18.6",
    "@babel/plugin-transform-reserved-words": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/runtime-corejs3": "^7.20.1",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "babel-jest": "^29.2.2",
    "core-js": "^3.26.0",
    "coveralls": "^3.1.1",
    "es6-promise": "^4.2.8",
    "esbuild": "^0.21.0",
    "esbuild-sass-plugin": "^3.2.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "govuk-one-login-service-header": "github:govuk-one-login/service-header#a823f1a5ddc2879945f7d4f2cce889d100d3441c",
    "jest": "^29.2.0",
    "jest-environment-jsdom": "^29.2.2",
    "jest-junit": "^16.0.0",
    "prettier": "^3.0.0",
    "sass": "^1.75.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.20.1",
    "@jest/globals": "^29.6.4",
    "@ministryofjustice/frontend": "2.1.3",
    "govuk-frontend": "^5.3.1",
    "perfume.js": "^9.0.0"
  },
  "jest-junit": {
    "outputDirectory": "./test-results/junit",
    "outputName": "results.xml"
  }
}
